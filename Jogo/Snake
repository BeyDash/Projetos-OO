import pygame
import sys
import random
import json

# Inicia o Pygame
pygame.init()

# Constantes do pygame
WIDTH, HEIGHT = 600, 400
SNAKE_SIZE = 20
SNAKE_SPEED = 15

# Cores do background/ponto/cobra
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
GREEN = (0, 255, 0)

# Cria a tela
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Snake Game")

# Inicia o snake
snake_x = WIDTH // 2
snake_y = HEIGHT // 2
snake_dx = 0
snake_dy = 0
snake_length = 1
snake_list = [(snake_x, snake_y)]

# alimento/ponto
food_x = random.randint(0, (WIDTH - SNAKE_SIZE) // SNAKE_SIZE) * SNAKE_SIZE
food_y = random.randint(0, (HEIGHT - SNAKE_SIZE) // SNAKE_SIZE) * SNAKE_SIZE

# pontuação
score = 0

# maior Pontuação
def load_high_score():
    try:
        with open("highscore.json", "r") as file:
            data = json.load(file)
            return data["high_score"]
    except FileNotFoundError:
        return 0

high_score = load_high_score()

#fontes
font = pygame.font.SysFont(None, 35)

#fim de jogo
game_over = False

#jogo
while not game_over:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            game_over = True
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_UP and snake_dy == 0:
                snake_dx = 0
                snake_dy = -SNAKE_SIZE
            if event.key == pygame.K_DOWN and snake_dy == 0:
                snake_dx = 0
                snake_dy = SNAKE_SIZE
            if event.key == pygame.K_LEFT and snake_dx == 0:
                snake_dx = -SNAKE_SIZE
                snake_dy = 0
            if event.key == pygame.K_RIGHT and snake_dx == 0:
                snake_dx = SNAKE_SIZE
                snake_dy = 0

    # Movimentaçao
    snake_x += snake_dx
    snake_y += snake_dy

    # Colisão
    if snake_x == food_x and snake_y == food_y:
        score += 10
        food_x = random.randint(0, (WIDTH - SNAKE_SIZE) // SNAKE_SIZE) * SNAKE_SIZE
        food_y = random.randint(0, (HEIGHT - SNAKE_SIZE) // SNAKE_SIZE) * SNAKE_SIZE
        snake_length += 1

    # Atualiza a cobra
    snake_list.append((snake_x, snake_y))
    if len(snake_list) > snake_length:
        del snake_list[0]

    # colisão com a parede ou a propria cobra
    if (
        snake_x >= WIDTH
        or snake_x < 0
        or snake_y >= HEIGHT
        or snake_y < 0
        or (snake_x, snake_y) in snake_list[:-1]
    ):
        game_over = True

    # Atualiza a tela
    screen.fill(BLACK)
    for segment in snake_list:
        pygame.draw.rect(screen, GREEN, [segment[0], segment[1], SNAKE_SIZE, SNAKE_SIZE])
    pygame.draw.rect(screen, WHITE, [food_x, food_y, SNAKE_SIZE, SNAKE_SIZE])

    # Display da pontuação
    text = font.render("Score: " + str(score), True, WHITE)
    screen.blit(text, (10, 10))

    # Display da pontuação mais alta
    high_score_text = font.render("High Score: " + str(high_score), True, WHITE)
    screen.blit(high_score_text, (10, 40))

    pygame.display.update()

    # velocidade do jogo
    pygame.time.Clock().tick(SNAKE_SPEED)

# Salvar a maior pontuação no jogo
if score > high_score:
    high_score = score
    high_score_data = {"high_score": high_score}
    with open("highscore.json", "w") as file:
        json.dump(high_score_data, file)

# Fechar o jogo
pygame.quit()
sys.exit()
